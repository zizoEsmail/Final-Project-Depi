@model PizzaRestaurantDrink.ViewModels.CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
}

<div class="bread-crumb">
    <div class="container">
        <div class="matter">
            <h2>Checkout</h2>
            <ul class="list-inline">
                <li class="list-inline-item"><a asp-action="Index">HOME</a></li>
                <li class="list-inline-item"><a href="#">Checkout</a></li>
            </ul>
        </div>
    </div>
</div>

<!-- Added min-height and ample padding-bottom to prevent footer overlap -->
<div class="commontop" style="min-height: 600px; padding-bottom: 150px;">
    <div class="container">
        <div class="row">

            <!-- =========================================
                 LEFT COLUMN: ORDER SUMMARY
            ========================================= -->
            <div class="col-md-7 col-sm-12 mb-4">
                <div class="loginnow" style="height: 100%;">
                    <div class="text-center">
                        <h4>Order Summary</h4>
                        <div class="divider style-1 center">
                            <span class="hr-simple left"></span>
                            <i class="icofont icofont-ui-press hr-icon"></i>
                            <span class="hr-simple right"></span>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Item</th>
                                    <th class="text-center">Qty</th>
                                    <th class="text-right">Price</th>
                                    <th class="text-right">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.CartItems)
                                {
                                    <tr>
                                        <td><strong>@item.ItemTitle</strong></td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-right">$@item.UnitPrice.ToString("0.00")</td>
                                        <td class="text-right">$@item.TotalPrice.ToString("0.00")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-right">Subtotal:</td>
                                    <td class="text-right">$@Model.SubTotal.ToString("0.00")</td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-right">Delivery Fee:</td>
                                    <td class="text-right">$@Model.DeliveryFee.ToString("0.00")</td>
                                </tr>
                                <tr style="font-size: 1.2em; color: #e54c2a; font-weight: bold;">
                                    <td colspan="3" class="text-right">Grand Total:</td>
                                    <td class="text-right">$@Model.GrandTotal.ToString("0.00")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <!-- =========================================
                 RIGHT COLUMN: CUSTOMER INFO
            ========================================= -->
            <div class="col-md-5 col-sm-12">
                <div class="loginto loginnow" style="height: 100%;">
                    <div class="text-center">
                        <h4>Customer Details</h4>
                        <div class="divider style-1 center">
                            <span class="hr-simple left"></span>
                            <i class="icofont icofont-ui-user hr-icon"></i>
                            <span class="hr-simple right"></span>
                        </div>
                    </div>

                    <p class="text-muted text-center mb-4">Confirm your details below.</p>

                    <div class="info-box">
                        <!-- Full Name -->
                        <div class="d-flex justify-content-between align-items-center border-bottom py-3">
                            <div>
                                <i class="icofont icofont-id-card text-theme" style="color: #e54c2a; font-size: 1.2em; margin-right: 10px;"></i>
                                <span class="font-weight-bold">Full Name:</span>
                            </div>
                            <div class="text-right">
                                @if (Model.HasFullName)
                                {
                                    <span>@Model.FullName</span>
                                    <i class="icofont icofont-check-circled text-success ml-2"></i>
                                }
                                else
                                {
                                    <a asp-controller="User" asp-action="Dashboard" class="text-danger" style="text-decoration: underline;">
                                        Add Name <i class="icofont icofont-exclamation-circle"></i>
                                    </a>
                                }
                            </div>
                        </div>

                        <!-- Phone -->
                        <div class="d-flex justify-content-between align-items-center border-bottom py-3">
                            <div>
                                <i class="icofont icofont-phone text-theme" style="color: #e54c2a; font-size: 1.2em; margin-right: 10px;"></i>
                                <span class="font-weight-bold">Phone:</span>
                            </div>
                            <div class="text-right">
                                @if (Model.HasPhoneNumber)
                                {
                                    <span>@Model.PhoneNumber</span>
                                    <i class="icofont icofont-check-circled text-success ml-2"></i>
                                }
                                else
                                {
                                    <a asp-controller="User" asp-action="Dashboard" class="text-danger" style="text-decoration: underline;">
                                        Add Phone <i class="icofont icofont-exclamation-circle"></i>
                                    </a>
                                }
                            </div>
                        </div>

                        <!-- Address -->
                        <div class="d-flex justify-content-between align-items-center border-bottom py-3">
                            <div>
                                <i class="icofont icofont-location-pin text-theme" style="color: #e54c2a; font-size: 1.2em; margin-right: 10px;"></i>
                                <span class="font-weight-bold">Address:</span>
                            </div>
                            <div class="text-right" style="max-width: 60%;">
                                @if (Model.HasAddress)
                                {
                                    <span style="font-size: 0.9em;">@Model.Address</span>
                                    <i class="icofont icofont-check-circled text-success ml-2"></i>
                                }
                                else
                                {
                                    <a asp-controller="User" asp-action="Dashboard" class="text-danger" style="text-decoration: underline;">
                                        Add Address <i class="icofont icofont-exclamation-circle"></i>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>

                    <br />

                    <!-- Time Details -->
                    <div class="text-center mt-4 p-3" style="background-color: #f9f9f9; border-radius: 5px;">
                        <h6 class="text-uppercase" style="color: #555;">Estimated Delivery</h6>
                        <hr style="margin: 10px 0;" />
                        <div class="row">
                            <div class="col-6 border-right">
                                <small class="text-muted">Order Time</small><br />
                                <strong>@Model.OrderTime.ToShortTimeString()</strong>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">Expected</small><br />
                                <strong style="color: #e54c2a;">@Model.ExpectedTime.ToShortTimeString()</strong>
                            </div>
                        </div>
                    </div>

                    <hr class="mt-4 mb-4" />

                    <!-- ACTION BUTTONS -->
                    @if (Model.CanPlaceOrder)
                    {
                        <form asp-action="PlaceOrder" method="post">
                            <button type="submit" class="btn btn-theme btn-md btn-block" style="padding: 12px; font-size: 1.1em;">
                                PLACE ORDER
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center" style="font-size: 0.9em;">
                            <i class="icofont icofont-warning-alt"></i> Complete your profile to order.
                        </div>
                        <button class="btn btn-secondary btn-md btn-block" disabled style="padding: 12px;">PLACE ORDER</button>
                    }

                    <div class="mt-3">
                        <a asp-action="Cart" class="btn btn-default btn-md btn-block" style="border: 1px solid #ccc;">Back to Cart</a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
<!-- Clearfix to ensure structure holds -->
<div class="clearfix"></div>