@model PizzaRestaurantDrink.ViewModels.DashboardMV
@{
    ViewData["Title"] = "Dashboard";
}

<!-- ================= BREADCRUMB START ================= -->
<div class="bread-crumb">
    <div class="container">
        <div class="matter">
            <h2>Dashboard</h2>
            <ul class="list-inline">
                <li class="list-inline-item"><a asp-controller="Home" asp-action="Index">HOME</a></li>
                <li class="list-inline-item"><a href="#">Dashboard</a></li>
            </ul>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- ================= DASHBOARD START ================= -->
<div class="dashboard">
    <div class="container">
        <div class="row justify-content-center">

            <!-- Title -->
            <div class="col-sm-12 commontop text-center">
                <h4>User Dashboard</h4>
                <div class="divider style-1 center">
                    <span class="hr-simple left"></span>
                    <i class="icofont icofont-ui-press hr-icon"></i>
                    <span class="hr-simple right"></span>
                </div>
            </div>

            <div class="col-lg-12 col-md-12 user-profile">
                <div class="row">

                    <!-- LEFT SIDE: TABS NAVIGATION -->
                    <div class="col-md-3 col-lg-2">
                        <div class="user-profile-tabs">
                            <ul class="nav nav-tabs flex-column">
                                <li class="nav-item">
                                    <a class="nav-link active" data-toggle="tab" href="#overview" aria-expanded="true">
                                        <i class="icofont icofont-dashboard-web"></i>
                                        <span>Overview</span>
                                    </a>
                                </li>
                                <li id="navprofile" class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#profile" aria-expanded="true">
                                        <i class="icofont icofont-ui-user"></i>
                                        <span>Profile</span>
                                    </a>
                                </li>
                                <!-- Placeholder tabs for future use -->
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#history" aria-expanded="true">
                                        <i class="icofont icofont-history"></i>
                                        <span>History</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- RIGHT SIDE: TABS CONTENT -->
                    <div class="col-md-9 col-lg-10">
                        <div class="tab-content">

                            <!-- 1. OVERVIEW TAB -->
                            <div id="overview" class="tab-pane fade active show">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="brief-info">
                                            <div class="media">
                                                <!-- Logic to show User Photo or Default -->
                                                @if (string.IsNullOrEmpty(Model.ProfileMV.UserPhotoPath))
                                                {
                                                    <img class="mr-3" src="~/assets/images/instagram/1.jpg" style="width:100px; height:150px; object-fit: cover;" alt="User">
                                                }
                                                else
                                                {
                                                    string photoPath = Model.ProfileMV.UserPhotoPath;

                                                    // FIX: If path doesn't start with "/" and doesn't start with "~", THEN add the folder.
                                                    // Otherwise, use it as is.
                                                    if (!photoPath.StartsWith("/") && !photoPath.StartsWith("~"))
                                                    {
                                                        photoPath = "~/Content/ProfilePhoto/" + photoPath;
                                                    }

                                                    <img class="mr-3" src="@Url.Content(photoPath)" style="width:100px; height:150px; object-fit: cover;" alt="User">
                                                }

                                                <div class="media-body">
                                                    <h4>@Model.ProfileMV.FirstName @Model.ProfileMV.LastName</h4>
                                                    <p><i class="icofont icofont-envelope"></i> @Model.ProfileMV.EmailAddress</p>
                                                    <p><i class="icofont icofont-phone"></i> @Model.ProfileMV.ContactNo</p>
                                                </div>
                                            </div>

                                            <div class="brief-info-footer" style="background-color: #e54c2a">
                                                <p style="font-size:medium; text-align:center; color:white;">
                                                    <i class="icofont icofont-ui-user"></i> Account Status: Active
                                                </p>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- ADDRESS SECTION (Only shows if Addresses exist in ViewModel) -->
                                    <!-- Currently commented out/safe-guarded until you add Addresses to DashboardMV -->
                                    <div class="col-lg-6">
                                        <div class="user-profile-offer">
                                            <h5>Registered Addresses <a asp-controller="Setting" asp-action="List_UserAddress">Manage</a></h5>
                                            <div class="offer-body">
                                                <p>No addresses found. Go to Settings > Addresses to add one.</p>
                                                <!-- Loop would go here -->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- 2. PROFILE TAB (Update Info + Password) -->
                            <div id="profile" class="tab-pane fade">
                                <div class="row">

                                    <!-- PERSONAL INFO FORM -->
                                    <div class="col-lg-6">
                                        <div class="user-personal-info">
                                            <h5>Personal Information</h5>
                                            <div class="user-info-body">
                                                <form asp-action="Dashboard" method="post" enctype="multipart/form-data">
                                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                                    <div class="form-row">
                                                        <div class="form-group col-md-6">
                                                            <input asp-for="ProfileMV.FirstName" class="form-control" placeholder="Enter First Name" />
                                                            <span asp-validation-for="ProfileMV.FirstName" class="text-danger"></span>
                                                        </div>
                                                        <div class="form-group col-md-6">
                                                            <input asp-for="ProfileMV.LastName" class="form-control" placeholder="Enter Last Name" />
                                                            <span asp-validation-for="ProfileMV.LastName" class="text-danger"></span>
                                                        </div>
                                                    </div>

                                                    <div class="form-row">
                                                        <div class="form-group col-12">
                                                            <input asp-for="ProfileMV.EmailAddress" type="email" class="form-control" placeholder="Enter Email Address" />
                                                            <span asp-validation-for="ProfileMV.EmailAddress" class="text-danger"></span>
                                                        </div>
                                                    </div>

                                                    <div class="form-row">
                                                        <div class="form-group col-12">
                                                            <input asp-for="ProfileMV.ContactNo" class="form-control" placeholder="Enter Contact Number" />
                                                            <span asp-validation-for="ProfileMV.ContactNo" class="text-danger"></span>
                                                        </div>
                                                    </div>

                                                    <div class="form-row">
                                                        <div class="form-group col-12">
                                                            <label>Upload Photo</label>
                                                            <input asp-for="ProfileMV.UserPhoto" type="file" class="form-control-file" />
                                                        </div>
                                                    </div>

                                                    <div class="form-row">
                                                        <div class="form-group mb-0 pt-4 col-12 text-center">
                                                            <button class="btn btn-theme btn-md" type="submit">SAVE CHANGES</button>
                                                            <a class="btn btn-theme btn-md btn-wide" asp-action="Dashboard">CANCEL</a>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- CHANGE PASSWORD FORM -->
                                    <div class="col-lg-6">
                                        <div class="user-change-password">
                                            <h5>Change Password</h5>
                                            <div class="change-password-body">
                                                <form asp-action="Dashboard" method="post">
                                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                                    <div class="form-group">
                                                        <input asp-for="OldPassword" type="password" class="form-control" placeholder="Old Password" />
                                                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                                                    </div>

                                                    <div class="form-group">
                                                        <input asp-for="NewPassword" type="password" class="form-control" placeholder="New Password" />
                                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                                    </div>

                                                    <div class="form-group">
                                                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                                    </div>

                                                    <div class="form-group mb-0 pt-4 text-center">
                                                        <button class="btn btn-theme btn-md" type="submit">CHANGE PASSWORD</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>

                                        <!-- EDUCATION / EXPERIENCE (Only if not Customer, assuming UserTypeID 4 is Customer) -->
                                        <!-- You can remove the 'if' condition if you want everyone to see this -->
                                        @if (Context.Session.GetInt32("UserTypeID") != 4)
                                        {
                                            <div class="user-change-password mt-4">
                                                <h5>Education + Experience</h5>
                                                <div class="change-password-body">
                                                    <form asp-action="Dashboard" method="post" enctype="multipart/form-data">

                                                        <div class="form-row">
                                                            <div class="form-group col-md-6">
                                                                <input asp-for="ProfileMV.EducationLevel" class="form-control" placeholder="Education Level" />
                                                                <input asp-for="ProfileMV.EducationLastDegreePhoto" type="file" class="form-control-file mt-2" />
                                                            </div>
                                                            <div class="form-group col-md-6">
                                                                @if (!string.IsNullOrEmpty(Model.ProfileMV.EducationLastDegreePhotoPath))
                                                                {
                                                                    <img src="@Url.Content(Model.ProfileMV.EducationLastDegreePhotoPath)" style="width:100px; height:auto;">
                                                                }
                                                                else
                                                                {
                                                                    <span class="text-danger small">No Degree Uploaded</span>
                                                                }
                                                            </div>
                                                        </div>

                                                        <div class="form-row">
                                                            <div class="form-group col-md-6">
                                                                <input asp-for="ProfileMV.ExperenceLevel" class="form-control" placeholder="Experience Level" />
                                                                <input asp-for="ProfileMV.ExperenceLastPhoto" type="file" class="form-control-file mt-2" />
                                                            </div>
                                                            <div class="form-group col-md-6">
                                                                @if (!string.IsNullOrEmpty(Model.ProfileMV.ExperenceLastPhotoPath))
                                                                {
                                                                    <img src="@Url.Content(Model.ProfileMV.ExperenceLastPhotoPath)" style="width:100px; height:auto;">
                                                                }
                                                                else
                                                                {
                                                                    <span class="text-danger small">No Experience Uploaded</span>
                                                                }
                                                            </div>
                                                        </div>

                                                        <div class="form-group mb-0 pt-4 text-center">
                                                            <button class="btn btn-theme btn-md" type="submit">Update Docs</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        }

                                    </div>
                                </div>
                            </div>
                            <!-- End Profile Tab -->

                            <div id="history" class="tab-pane fade">
                                <p>Order History coming soon...</p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Dashboard End -->